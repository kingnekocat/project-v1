<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shc.pt.member.MemberMapper">

<select id="getMemberByID" resultType="com.shc.pt.member.Member">
	select * from pjmember where m_id = #{m_id}
</select>

<insert id="join">
	insert into pjmember values(#{m_id},#{m_pw},#{m_photo},#{m_name},#{m_nickname},#{m_addr},#{m_fav})
</insert>

<update id="update" parameterType="com.shc.pt.member.Member">
		update pjmember
		set m_photo=#{m_photo},
		m_nickname=#{m_nickname}, m_addr=#{m_addr}, m_fav=#{m_fav}
		where
		m_id=#{m_id}
</update>

<delete id="deletem"
		parameterType="com.shc.pt.member.Member">
		delete from pjmember
		where m_id = #{m_id}	
</delete>

</mapper>