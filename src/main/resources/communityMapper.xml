<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shc.pt.community.CommunityMapper">

<select id="getcommunity" resultType="com.shc.pt.community.Community">
			select * from a_community order by c_date desc
</select>

<select id="getonecommunity" resultType="com.shc.pt.community.Community">
	select * from a_community where c_no = #{c_no}
</select>

<insert id="regcommunity" parameterType="com.shc.pt.community.Community">
	insert into a_community values(a_community_seq.nextval,#{c_writer},#{c_title},#{c_txt},#{c_photo},sysdate)
</insert>

<delete id="deletecommunity" parameterType="com.shc.pt.community.Community">
	delete from a_community where c_no = #{c_no}
</delete>

<update id="communityUpdate" parameterType="com.shc.pt.community.Community">
		update a_community
		set c_title=#{c_title},
		c_txt=#{c_txt}, c_photo=#{c_photo}
		where
		c_no=#{c_no}
</update>

<select id="communitysearch" resultType="com.shc.pt.community.Community">

select * from a_community where c_title like '%'||#{c_title}||'%' order by c_date desc

</select>


</mapper>